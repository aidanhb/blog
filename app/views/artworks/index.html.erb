<h1>Artwork</h1>

<%= link_to 'New Artwork', new_artwork_path %>

<table>
	<tr>
		<th>Title</th>
		<th>Description</th>
		<th colspan="3"></th>
	</tr>

	<% @artworks.each do |work| %>
		<tr>
			<td><%= work.title %></td>
			<td><%= work.description %></td>
			<td><%= link_to 'Show', artwork_path(work) %></td>
			<td><%= link_to 'Edit', edit_artwork_path(work) %></td>
			<td><%= link_to 'Destroy', artwork_path(work),
					method: :delete,
					data: { confirm: 'Are you sure?' } %></td>
		</tr>
	<% end %>
</table>

